<% if @is_liked %>
	{	
		noty({text: 'Tweet Was Liked',type: 'information',
	    timeout: 2000});
			$('#like_<%= @tweet.id%>').hide().css("color","red").fadeIn();
	}
<% else %>
		{
			noty({text: 'Tweet Was UnLiked',type: 'information',
			    timeout: 2000});
				$('#like_<%= @tweet.id%>').hide().css("color","blue").fadeIn();
		}
<% end %>