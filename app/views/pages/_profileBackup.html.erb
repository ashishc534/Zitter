<div class="row">
	<div class="col-xs-3">
		<div class="panel-body" id="profile">
				<img src="/bg2.jpg" class="img-responsive">
				<span><img src="/uploads/<%=User.find_by_username(params[:id]).profile_picture%>" class="profile profile_sketch">
				<span class="post-owner"><%=User.find_by_username(params[:id]).username%></span>
				</span>
				<div id="User_acts">
				<a href="#" id="noOfposts">Posts
					<div id="User_acts_count"><span id="tweets_count"><%=User.find_by_username(params[:id]).posts.count%></span></div></a>

				<a href="#" id="noOffollowers">Followers
				<div id="User_acts_count">13</div>
				</a>
				
