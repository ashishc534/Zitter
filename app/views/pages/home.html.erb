<div class="row">
	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-body" id="profile">
				<div style="width: 261px; height: 130px; background-color: <%=current_user.theme%>;"></div>
				<span><img src="/uploads/<%=current_user.profile_picture%>" class="profile profile_sketch" >
				<span class="post-owner"><a href="/user/<%=current_user.username%>"><%=current_user.username%></a></span>
				</span>
				<div id="User_acts">
				<a href="/user/<%=current_user.username%>" id="noOfposts"><span class="user-links">Posts</span>
					<div id="User_acts_count"><span id="tweets_count" style="margin-top: 0px;"><%=current_user.posts.length%></span></div></a>

				<a href="/user/<%=current_user.username%>/followers" id="noOffollowers"><span class="user-links">Followers</span>
				<div id="User_acts_count"><span id="followers_count"><%=current_user.passive_relationships.count%></span></div>
				</a>
				
				<a href="/user/<%=current_user.username%>/following" id="noOffollowees"><span class="user-links">Following</span>
				<div id="User_acts_count"><span id="following_count"><%= current_user.active_relationships.count%></span></div></a>
				</div>
			</div>		
		</div>
		
		<div class="panel panel-info">
			<div class="panel-heading">
				<center><b>Trending</b></center>
			</div>
			<div class="panel-body trending">
				<%@trending.each do|trending|%>
					<%= render 'trends',trending: trending %>
				<% end %>
			</div>
  			
		</div>
	</div>
	<div class="col-xs-6" style="margin-top: 20px;">
		<%= render '/posts/form' %><br><br>
			<%@feed.each do |tweet| %>
				<div id="tweets">
				<%= render 'post', tweet: tweet %>
				</div>
			<% end %>
		
		<div class="panel panel-default form-panel backToTop">
	  			<div class="panel-body row">
	  				<div class="col-sm-12">
	  					<center><img src="/image.jpg" height="25px" width="25px"><br><a href="#top"><p style="opacity: 0.7">Back to Top <span class="glyphicon glyphicon-arrow-up"></span></p></a></center>
	  				</div>
	  			</div>		
		</div>
		
	</div>
	<div class="col-xs-3">
		<div class="panel panel-default">
  			<div class="panel-body">
				<p class="About"> <a href=#>@ 2017 Zitter</a>
					<a href=#>About</a>
					<a href=#>Help</a>
					<a href=#>Terms</a>
					<a href=#>Privacy</a>
					<a href=#>Cookies</a>
					<a href=#>Ads</a>
					<a href=#>Info</a>
					<a href=#>Brand</a>
					<a href=#>Blog</a>
					<a href=#>Status</a>
					<a href=#>Ads</a>
					<a href=#>Jobs</a>
					<a href=#>Advertise</a>
					<a href=#>Businesses</a>
					<a href=#>Media</a>
					<a href=#>Developers</a>
				</p>
			</div>
		</div>
	</div>

</div>

