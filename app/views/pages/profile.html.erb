<div class="row">
	<div class="col-md-3">
		<img src="/uploads/<%=User.find_by_username(@username).profile_picture%>" class="profileAvatar-image">
	</div>
	<div class="col-xs-6" style="margin-top: 20px;">
		<% @feed.each do |tweet| %>
			<div id="tweets">
			<%= render 'post', tweet: tweet %>
			</div>
		<% end %>
	
		<div class="panel panel-default form-panel">
	  			<div class="panel-body row">
	  				<div class="col-sm-12">
	  					<center><img src="/image.jpg" height="25px" width="25px"><br><a href="#top"><p style="opacity: 0.7">Back to Top <span class="glyphicon glyphicon-arrow-up"></span></p></a></center>
	  				</div>
	  			</div>		
		</div>
	</div>
	<div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<b>WHO TO FOLLOW</b>
			</div>
			<div class="panel-body">
			<%@whotofollow.each do|users|%>
				<div class="row">
					<% if users.Can_follow users.id,current_user.id %>
					<div class="col-md-4">
						<img src="/uploads/<%=users.profile_picture%>" class="round-image" style="height: 50px; width: 50px;">
					</div>
					<div class="col-md-8 whotofollow">
						<a href="/user/<%=users.username%>"><%=users.username%></a>
					</div>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>