	<div class="panel panel-default" style="margin-top: -15px; margin-left: -18px; margin-right: -18px;">
	<div class="row">
			<div class="col-sm-1" style="margin-top: 10px; margin-left: 10px;">
	  			<img src="/uploads/<%= User.find_by_id(trending.user_id).profile_picture %> " class="round-image" height="30px" width="30px">
	  			</img>
	  		</div>
	  		<div class="col-sm-10" style="margin-top: 10px;">
  				<p class="post-title"><span class="post-owner"><a href="/user/<%=User.find(trending.user_id).username%>"><%=User.find(trending.user_id).username%></a></span></p>	
  			</div>
  		</div>
		<div class="panel-body">
			<p class="post-content"><%=trending.content %></p>
		</div>
		<div class="panel-footer" style="background: transparent;">
		<ul style="display: flex; justify-content: space-around; margin-top: -10px; padding: 7px 7px 1px 7px;">
				<a href="/comments?tweet_id=<%=trending.id%>"><li style="list-style: none; margin-left: -20px;"><span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span></li></a>
			<li style="list-style: none; margin-left: -40px;">
				<%=form_tag (toggle_path method:'post',tweet_id:trending.id),remote:true do%>
						<a id="like_<%=trending.id%>" data-remote="true" rel="nofollow" data-method="post" href="/toggle?tweet_id=<%=trending.id%>" class="<%= trending.like_string(current_user.id)%>"><span class="glyphicon glyphicon-heart g-links-heart"></span></a>
						<% end %>
			</li>
			<li style="list-style: none; margin-left: -30px;">	
				<span id="trending_likes_count"><%=trending.likes.count%> Likes</span>
			</li>
		</ul>
	</div>
	</div>