<!DOCTYPE html>
<html>
<head>
  <title>Zitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
<script type="text/javascript">
	noty({text: '<%= notice %>',type: 'success',
    timeout: 2000});
</script>

<% end %>


<% if alert %>

<script type="text/javascript">
	noty({text: '<%= alert %>', type: 'error' ,timeout: 2000});
</script>
<% end %>

<%= render '/layouts/nav' %>

<% if params[:id]!=nil %>
	<% @url='/user/'+params[:id] %>
	<div style="display: flex; width: 100%; height: 250px;"><img src="/uploads/<%=current_user.cover_image%>" class="profile-banner"></div>
<% end %>

<div class="container">
<span class="notice"><%= notice %></span>
<span class="alert"><%= alert %></span>

<%= yield %>	
</div>

</body>
</html>

<style>
	.profile-banner{
		 height: auto;
    	width: 100%;
    	overflow: hidden;
		margin-top: -21px;
	}
</style>