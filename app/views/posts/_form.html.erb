<div class="panel panel-default form-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src="/uploads/<%=current_user.profile_picture%>" class="round-image" height="35px" width="35px"></img>
    </div>
    <div class="col-sm-11">
      <%= form_for (@post) , remote: true do |f| %>
            <div class="field">
              <%= f.text_field :content, autofocus: true,:class => 'form-control'%> 
            </div>
            <br>
            <button type="submit" name="commit" id="submit_button"><span id="post">Post</span></button>
            <span id="content_size">140 Characters..</span>
      <% end %>   
    </div>
  </div>
</div>
<script>
    $('#post_content.form-control').attr("placeholder","Share Someting <%=current_user.username.split(' ')[0]%>..");

</script>
<style>
  #submit_button{
    margin-bottom: 0px;
    margin-left: 10px;
    border-radius: 20px;
    border: 1px solid white;
    color: white;
    width: 60px;
    outline: none;
  }
  .actions{
    display: flex;
    justify-content: space-between;
  }
  .field{
    margin-left: 15px;
  }
  .new{
    color:green;
  }
  #content_size{
    padding-left: 2px;
  }
</style>
